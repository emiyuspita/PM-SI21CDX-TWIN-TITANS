<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2E0E8"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/poto2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/villapahawangdua"
                android:scaleType="centerCrop"
                android:contentDescription="Gambar Pantai"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiket Vila Pahawang"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pulau Pahawang"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bandar Lampung"
                    android:textSize="17dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/background"
                android:padding="10dp">


                <EditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/txt_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/txt_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Check-in"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/txt_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Check-out"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/txt_tiket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Tiket"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txt_permintaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Permintaan Khusus"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/txt_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Penjemputan"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pesan"
                android:background="#448da9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Harga : "
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvTotalPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga Tiket Per Orang "
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="800000"
                    android:textSize="17dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>